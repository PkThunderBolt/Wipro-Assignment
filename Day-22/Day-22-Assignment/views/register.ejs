<!DOCTYPE html>
<html>
  <body>
    <h2>User Registration</h2>

    <form action="/register" method="POST">
      <input
        type="text"
        name="name"
        placeholder="Full Name"
        required
      /><br /><br />
      <input
        type="text"
        name="username"
        placeholder="Username"
        required
      /><br /><br />
      <input
        type="password"
        name="password"
        placeholder="Password"
        required
      /><br /><br />

      <button type="submit">Register</button>
    </form>
  </body>
</html>
